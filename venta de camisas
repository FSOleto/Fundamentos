#include <iostream>
using namespace std;

int main()
{
float cantidad,precio,descuento,preciototal;
cout<<"ingresar la cantidad de camisas: ";
cin>>cantidad;
cout<<"El precio de las camisas: "; //precio= 100
cin>>precio;
if(cantidad>=3)
descuento=0.25;
else
   if (cantidad>=0)
        descuento=0.10;
        else
        cout<<"error";
        preciototal=(cantidad*precio)-(cantidad*precio)*descuento;
        cout<<"el precio total es :"<<preciototal;

    return 0;
}
